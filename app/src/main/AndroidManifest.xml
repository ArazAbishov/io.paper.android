<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="io.paper.android">

    <application
        android:name=".PaperApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <provider
            android:name=".data.stores.DbContentProvider"
            android:authorities="io.paper.android.provider"
            android:exported="false"/>

        <activity android:name=".notes.NotesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".editnote.EditNoteActivity">
        </activity>
    </application>

</manifest>